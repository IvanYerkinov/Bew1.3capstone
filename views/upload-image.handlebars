<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/images/upload" method="post">
      <legend>Upload/legend>
      <div class="form-group">
        <label for="post-title">Image Title</label>
        <input type="text" name="title" class="form-control" id="title-input" placeholder="">
      </div>
      <div class="form-group">
        <label for="post-title">Image Url</label>
        <input type="text" name="imgurl" class="form-control" id="url-input" placeholder="">
      </div>
      <div class="form-group">
        <label for="post-title">Image Summary</label>
        <input type="text" name="summary" class="form-control" id="sum-input" placeholder="">
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Upload</button>
      </div>
    </form>
  </div>
</div>

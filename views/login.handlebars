<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/login" method="post">
      <legend>Login</legend>
      <p>Login</p>
      <div class="form-group">
        <label for="post-title">Username</label>
        <input type="text" name="username" class="form-control" id="username-input" placeholder="">
      </div>
      <div class="form-group">
        <label for="post-password">Password</label>
        <input type="text" name="password" class="form-control" id="password-input" placeholder="">
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
  </div>
</div>
